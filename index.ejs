<!-- index.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Books</title>
</head>
<body>
    <h1>Book List</h1>
    <ul>
        <% if (books.length > 0) { %>
            <% books.forEach(book => { %>
                <li>
                    <strong><%= book.title %></strong> - <%= book.author %>
                    <a href="/book/<%= book.id %>">View</a>
                    <a href="/update/<%= book.id %>">Edit</a>
                    <a href="/delete/<%= book.id %>">Delete</a>
                </li>
            <% }) %>
        <% } else { %>
            <p>No books available.</p>
        <% } %>
    </ul>
    <a href="/create">Create New Book</a>
</body>
</html>
